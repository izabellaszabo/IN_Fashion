<% User_Var() %>
<!DOCTYPE html>
<html>
<head>
<title><%= yield(:title).empty? ? 'IN Fashion' : yield(:title) %></title>
<%= favicon_link_tag 'site/favicon.ico' %>
<meta charset="UTF-8">

<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet" type="text/css">
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

</head>

<body>
	<header>
		<div id="logo">
			<img src="/assets/site/logo.png" alt="logo"/>
		</div>
		<div id="right">
			<% if session[:username] != nil %>
			<div style="float: left; width: 93%;">Welcome, <%= session[:username] %>; Your Cart total is â‚¬</div>
			<div id="cp1" style="float: left; width: 7%; text-align: left;">0.00</div>
			<% else %>
			Welcome  to our online store!
			<% end %>
			<br/>
			<ul id="quicklinks">
				<li><%=link_to "My Account", "account" %></li>
				<li> | </li>
				<li><%=link_to "My Cart", :action => 'index', :controller => 'carts' %></li>
				<li> | </li>
				<li><%=link_to "Checkout", :action => 'checkout', :controller => 'carts' %></li>
				<li> | </li>
				<% if session[:username] != nil %>
					<%=link_to "Logout", 'logout' %>
				<%else%>
					<li><a id="modal_trigger" href="#modal">Login</a></li>
				<%end%>
			</ul>
		</div>
		<div id="nav">
			<ul>
				<li><%=link_to "Women's", :action => 'women', :controller => 'products' %></li> 
				<li><%=link_to "Men's", :action => 'men', :controller => 'products' %></li> 
				<li><%=link_to "Sport's Wear", :action => 'sport', :controller => 'products' %></li>
			</ul>
		</div>
	</header>
	
	<div id="navimg">
		<%= yield :header %>
	</div>
	
	<div id="main">
		<%= yield :content %>
		<%= render partial: ("/layouts/loginform") %>
	</div>
	
	<script type="text/javascript">
		$("#modal_trigger").leanModal({top : 200, overlay : 0.6, closeButton: ".modal_close" });
	</script>

	<footer>
		<div id="footerlinks">
			<ul>
				<li><%=link_to "Home", :action => 'home', :controller => 'site' %></li> 
				<li> | </li>
				<li><%=link_to "Women's", :action => 'women', :controller => 'products' %></li> 
				<li> | </li>
				<li><%=link_to "Men's", :action => 'men', :controller => 'products' %></li> 
				<li> | </li>
				<li><%=link_to "Sport Wear", :action => 'sport', :controller => 'products' %></li>
				<li> | </li>
				<li><%=link_to "About", :action => 'about', :controller => 'site' %></li> 
				<li> | </li>
				<li><%=link_to "Contact", new_contact_path, :controller => 'contacts' %></li> 
			</ul>
		</div>
		
		<div id="updated">
			&copy; IN Fashion 2015
		</div>
	</footer>
	
</body>
</html>
